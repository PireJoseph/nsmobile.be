---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='fr'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header
			class='relative flex h-36 justify-center bg-gradient-to-r from-primary to-secondary pt-4 pb-4 text-center text-2xl text-white md:h-96 md:text-3xl xl:text-4xl'>
			<h1>
				NS<span id='header-title-mobile' class='rounded-2xl bg-white'
					>mobile</span
