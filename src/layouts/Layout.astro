---
import Wave from '../components/Wave.astro';
export interface Props {
	title?: string;
}

const { title = 'NSmobile.be' } = Astro.props;
---

<!DOCTYPE html>
<html lang='fr' class='h-full'>
	<head>
		<meta charset='UTF-8' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class='h-full'>
		<div class='h-full flex-col'>
			<header
				class='md:h-86 flex h-48 flex-col justify-between bg-gradient-to-r from-primary to-secondary pt-8 text-center text-2xl text-white sm:h-64 md:text-3xl xl:text-4xl'>
				<h1>
					NS<span class='rounded-3xl bg-white text-dark'>mobile</span>
				</h1>
				<Wave />
			</header>
			<main class='grow'>
				<slot />
			</main>
		</div>
	</body>
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			#da62c4 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: #f6f6f6;
	}
</style>
