---
import BaseLayout from './BaseLayout.astro';
import BtnLink from '../components/BtnLink.astro';

import logo from '../assets/img/logo.png';

export interface Props {
	title?: string;
	links: Array<{
		href: string;
		title: string;
	}>;
}

const { title = '', links = [] } = Astro.props;
---

<BaseLayout title={title ? title + ' | NSmobile.be' : 'NSmobile.be'}>
	<div class='flex h-full flex-col justify-between overflow-hidden'>
		<div>
			<div
				class='flex w-full justify-center gap-8 md:flex-row md:gap-32 lg:gap-64'>
				{
					links
						.slice(0, 2)
						.map((link) => <BtnLink href={link.href} title={link.title} />)
				}
			</div>

			<figure class='flex justify-center'>
				<img
					src={logo.src}
					class='h-64 w-64'
					height={logo.height}
					width={logo.width}
				/>
			</figure>

			<div
				class='flex w-full justify-center gap-8 md:flex-row md:gap-32 lg:gap-64'>
				{
					links
						.slice(2, 4)
						.map((link) => <BtnLink href={link.href} title={link.title} />)
				}
			</div>
		</div>

		<div class='relative flex flex-col items-center justify-center'>
			<span class='z-10 text-2xl text-white'>{title}</span>
			<div
				class='absolute -bottom-32 z-0 inline-block h-44 w-44 rounded-full bg-gradient-to-r from-primary to-dark'>
			</div>
		</div>
	</div>
</BaseLayout>
