---
export interface Props {
	title: string;
	href: string;
}

const { href, title } = Astro.props;
---

<a class='inline-flex flex-col items-center gap-2' href={href} title={title}>
	<slot />
	<span
		class='cl:px-2 inline-flex w-32 justify-center rounded-4xl bg-primary py-3 text-2xl xl:w-44 xl:text-3xl'
		>{title}</span
	>
</a>

<style lang='scss'>
	a:hover {
		opacity: 0.8;
		span {
			opacity: 0.7;
		}
	}
</style>
