---
import BaseLayout from '../layouts/BaseLayout.astro';

import comingSoon from '../assets/img/coming_soon.gif';

export const prerender = true;
---

<BaseLayout>
	<div
		class='flex max-h-screen flex-col items-center justify-between px-4 py-8 lg:h-screen'>
		<head>
			<div>
				<h1
					class='text-center text-4xl font-black text-primary lg:mt-20 lg:text-5xl'>
					Nsmobile IT Solution
				</h1>
				<p class='text-right text-sm text-shadow lg:text-lg'>
					Its coming soon...
				</p>
			</div>
		</head>
		<main class='flex flex-col justify-center lg:flex-row'>
			<aside class='mx-auto flex lg:w-auto lg:shrink-0 lg:grow'>
				<img
					class='w-72 max-w-3xl lg:w-full'
					src={comingSoon.src}
					width={comingSoon.width}
					height={comingSoon.height}
					alt='nsmobile'
				/>
			</aside>
			<div class='flex max-w-lg flex-col items-center text-center lg:shrink'>
				<h2
					class='mt-8 max-w-lg px-4 text-3xl font-black text-light lg:mt-16 lg:text-5xl'>
					Looking for something&nbsp;?
				</h2>
				<p
					class='lg:my-18 lg:text-md my-4 max-w-xl text-sm text-shadow lg:my-8'>
					It's not here yet, but we'll let you in on a secret. It's coming
					really, really soon. So sit tight and check back in on <span
						class='font-bold'>August 31</span
					>. You just might see something that will blow your socks off!
				</p>
				<p class='lg:text-md my-4 text-sm'>
					Really excited to get in touch with us?
				</p>
				<a
					class='inline-block w-32 rounded-lg bg-primary py-2 text-white'
					href='https://nsmobile6k.be/users/nsmobile6k'
					title='contact'>
					contact us
				</a>
			</div>
		</main>
		<footer class='mt-8 text-sm text-shadow lg:text-lg'>Â© Nsmobile</footer>
	</div>

	<style>
		h1,
		h2 {
			font-family: 'Roboto', sans-serif;
		}
		h2 {
			-webkit-text-stroke: 1px #7e72f4;
			text-stroke: 1px #7e72f4;
		}
	</style>
</BaseLayout>
